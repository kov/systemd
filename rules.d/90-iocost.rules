SUBSYSTEM!="block", GOTO="iocost_end"

ACTION=="remove", GOTO="iocost_end"

IMPORT{builtin}="hwdb 'block:*:name:$env{ID_MODEL}:fwrev:$env{ID_REVISION}:'"

ENV{IOCOST_SOLUTIONS}=="", IMPORT{builtin}="hwdb 'block:*:name:$env{ID_MODEL}:fwrev:*:'"

ENV{IOCOST_SOLUTIONS}!="", RUN+="iocost apply $env{DEVNAME}"

LABEL="iocost_end"
